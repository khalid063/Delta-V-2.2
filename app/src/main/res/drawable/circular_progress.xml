<!-- res/drawable/circular_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background ring (optional) -->
    <item android:id="@android:id/background">
        <shape android:shape="ring"
            android:innerRadiusRatio="3.2"
            android:thickness="1dp"
            android:useLevel="false">
            <stroke android:width="1dp" android:color="#E0E0E0" /> <!-- Light grey background -->
        </shape>
    </item>

    <!-- Progress ring -->
    <item android:id="@android:id/progress">
        <shape android:shape="ring"
            android:innerRadiusRatio="3.2"
            android:thickness="1dp"
            android:useLevel="true"> <!-- Set to true to animate progress -->
            <stroke android:width="1dp" android:color="@color/GreenMainLight" /> <!-- Progress color -->
        </shape>
    </item>
</layer-list>




